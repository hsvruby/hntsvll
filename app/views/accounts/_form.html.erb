<%= semantic_form_for @account, { :html => { :multipart => true } } do |f| %>

 <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :page_url %>
    <%= f.input :avatar, :hint => "Avatar will be cropped to 176x176 pixels" %>
  <% end %>

  <%= f.inputs do %>
    <%= f.input :categories, :as => :check_boxes, :collection => @categories, :required => true %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
