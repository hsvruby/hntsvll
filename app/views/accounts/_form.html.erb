<%= semantic_form_for @account do |f| %>

 <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :page_url %>
  <% end %>

  <%= f.input :categories, :as => :check_boxes, :collection => @categories, :required => true %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
